<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>

	<!-- 配置mysql连接池 -->
	<named-config name="mysql">
		<!-- 默认配置 -->
		<default-config>
			<property name="driveClass">com.mysql.jdbc.Driver</property>
			<property name="jdbcUrl">
				<![CDATA[jdbc:mysql://localhost:3306/test?useUnicode=true&characterEncoding=UTF8&useSSL=false]]>
			</property>
			<property name="user">root</property>
			<property name="password">1314</property>
			
			<property name="initialPoolSize">5</property>
			<property name="maxIdleTime">30</property>
			<property name="maxPoolSize">10</property>
			<property name="minPoolSize">2</property>
			<property name="maxStatements"></property>
			<!-- 当连接池中的连接耗尽时，一次同时获取的连接数。Default:3 -->
			<property name="acquireIncrement">3</property>
		</default-config>
	</named-config>
	
	<!-- 配置oracle连接池 -->
</c3p0-config>